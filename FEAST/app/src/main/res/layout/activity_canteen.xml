<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CanteenPage"
    android:backgroundTint="@color/white">

    <include layout="@layout/content_canteen" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        app:layout_anchor="@+id/toolbar"
        app:layout_anchorGravity="top"
        app:title="Canteen"
        app:titleMarginStart="70dp"
        app:titleTextColor="@color/feast_blue" />

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="51dp"
        android:layout_height="35dp"
        android:layout_marginTop="7dp"
        android:backgroundTint="@color/white"
        android:contentDescription="Image Button for Back"
        android:minWidth="32dp"
        android:minHeight="48dp"
        app:layout_anchor="@+id/backButton"
        app:layout_anchorGravity="end|center"
        app:srcCompat="@drawable/ic_baseline_arrow_back"
        app:tint="@color/feast_blue" />

    <Switch
        android:id="@+id/favourite_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="10dp"
        android:buttonTint="@color/feast_blue"
        android:checked="false"
        android:minHeight="48dp"
        android:text="Favourite"
        android:textColor="@color/feast_blue" />


</androidx.coordinatorlayout.widget.CoordinatorLayout>